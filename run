#!/bin/sh -e

dev() {
    echo TODO >&2
}

if [ $# -gt 1 ]; then
    echo "Error: expected at most 1 command (see bottom of script for options)" >&2
    exit 1
elif [ $# -eq 0 ]; then
    command=dev
else
    command=$1
fi

case $command in
    dev) dev ;;
    restart) docker-compose down && dev ;;
    stop) docker-compose down ;;
    rm) docker-compose down -v ;;
esac
